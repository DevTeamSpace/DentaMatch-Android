        <activity
            android:name=".ui.activities.SplashActivity"
            android:screenOrientation="userPortrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "www.vconnect.com" -->
                <data
                    android:host="www.vconnect.com"
                    android:pathPrefix="/"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name="com.appster.dentamatch.ui.auth.AppIntroActivity" />
        <activity
            android:name="com.appster.dentamatch.ui.auth.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.appster.dentamatch.ui.auth.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.appster.dentamatch.ui.auth.ResetPasswordActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>

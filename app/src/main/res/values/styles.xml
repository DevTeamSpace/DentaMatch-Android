<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>

    </style>

    <style name="CustomAlertDialogTitle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="AppTheme">
        <item name="android:windowTitleStyle">@style/CustomAlertDialogTitle</item>
    </style>


    <style name="TextView" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item businessName="android:textColor">@android:color/darker_gray</item>-->
    </style>


    <!--<style name="TextViewSmall" parent="TextView">-->
    <!--<item name="android:textSize">@dimen/text_size_small</item>-->
    <!--</style>-->

    <!--<style name="TextViewMedium" parent="TextView">-->
    <!--<item name="android:textSize">@dimen/text_size_medium</item>-->
    <!--</style>-->

    <style name="text_view_normal" parent="TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>


    <!--<style name="TextViewLarge" parent="TextView">-->
    <!--<item name="android:textSize">@dimen/text_size_large</item>-->
    <!--</style>-->


    <!--Edit txt style-->
    <style name="edit_text" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item businessName="android:textColor">@android:color/darker_gray</item>-->
    </style>

    <style name="edit_text_view_normal" parent="edit_text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorHint">@color/edt_hint_color</item>
        <item name="android:textColor">@color/text_default_color</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="button_style">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/button_bg_color</item>

        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="edit_input_layout" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColorHint">@color/edt_hint_color</item>
        <item name="android:textColor">@color/edt_hint_color</item>
    </style>

    <dimen name="button_height">50dp</dimen>
    <color name="button_bg_color">#0470c0</color>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#20000000">
    <item>
        <layer-list android:paddingTop="6dp" android:paddingBottom="6dp">
            <item android:id="@android:id/mask" android:top="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:radius="5dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_forgot_pwd" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_reference_name"
        android:layout_width="match_parent"

        android:layout_height="@dimen/edit_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_19"
        android:clipToPadding="false"

        android:gravity="bottom"
        android:paddingTop="@dimen/padding_input_layout"

        app:hintTextAppearance="@style/edit_input_layout">


        <EditText
            android:id="@+id/et_office_reference_name"
            style="@style/edit_text_view_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@drawable/edit_text_selector"
            android:hint="@string/reference_name"
            android:paddingTop="@dimen/padding_drawable" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_reference_mobile"
        android:layout_width="match_parent"

        android:layout_height="@dimen/edit_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_19"
        android:clipToPadding="false"

        android:gravity="bottom"
        android:paddingTop="@dimen/padding_input_layout"

        app:hintTextAppearance="@style/edit_input_layout">


        <EditText
            android:id="@+id/et_office_reference_mobile"
            style="@style/edit_text_view_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@drawable/edit_text_selector"
            android:hint="@string/reference_mobile"
            android:paddingTop="@dimen/padding_drawable" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_reference_email"
        android:layout_width="match_parent"

        android:layout_height="@dimen/edit_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_19"
        android:clipToPadding="false"

        android:gravity="bottom"
        android:paddingTop="@dimen/padding_input_layout"

        app:hintTextAppearance="@style/edit_input_layout">


        <EditText
            android:id="@+id/et_office_reference_email"
            style="@style/edit_text_view_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@drawable/edit_text_selector"
            android:hint="@string/reference_email"
            android:paddingTop="@dimen/padding_drawable" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>

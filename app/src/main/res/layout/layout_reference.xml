<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_reference_count"
            style="@style/text_view_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_19"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:text="@string/reference"
            android:textColor="@color/color_forgot_pwd"
            android:textSize="@dimen/text_size_16"
            app:customFont="@string/font_bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_reference_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="@dimen/margin_19"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:paddingTop="@dimen/padding_input_layout"
            app:hintTextAppearance="@style/edit_input_layout">


            <EditText
                android:id="@+id/et_office_reference_name"
                style="@style/edit_text_view_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@drawable/edit_text_selector"
                android:digits="@string/digits_alpha_numeric_only"
                android:hint="@string/reference_name"
                android:paddingTop="@dimen/padding_drawable" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_reference_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="@dimen/margin_19"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:paddingTop="@dimen/padding_input_layout"
            app:hintTextAppearance="@style/edit_input_layout">

            <EditText
                android:id="@+id/et_office_reference_mobile"
                style="@style/edit_text_view_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@drawable/edit_text_selector"
                android:hint="@string/reference_mobile"
                android:inputType="phone"
                android:maxLength="13"
                android:paddingTop="@dimen/padding_drawable" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_reference_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="@dimen/margin_19"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:paddingTop="@dimen/padding_input_layout"
            app:hintTextAppearance="@style/edit_input_layout">

            <EditText
                android:id="@+id/et_office_reference_email"
                style="@style/edit_text_view_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@drawable/edit_text_selector"
                android:digits="@string/digits_alpha_numeric_email"
                android:hint="@string/reference_email"
                android:inputType="textEmailAddress"
                android:paddingTop="@dimen/padding_drawable" />
        </android.support.design.widget.TextInputLayout>

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_reference_delete"
            style="@style/text_view_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_12"
            android:paddingStart="@dimen/margin_medium"
            android:text="@string/reference_delete"
            android:textColor="@color/red_color"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone"
            app:customFont="@string/font_regular" />
    </LinearLayout>
</layout>
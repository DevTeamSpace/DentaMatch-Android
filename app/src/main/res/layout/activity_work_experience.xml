<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_work_exp"
            layout="@layout/toolbar_general" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_next_work_exp"
            android:layout_below="@+id/toolbar_work_exp">

            <LinearLayout
                android:id="@+id/layout_parent_scroll_work_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="@dimen/margin_25">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/profile_progress_dimen"
                        android:layout_height="@dimen/profile_progress_dimen"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="25"
                        android:progressDrawable="@drawable/circuler_progress" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/create_profile_iv_profile_icon"
                        android:layout_width="@dimen/profile_image_height"
                        android:layout_height="@dimen/profile_image_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/profile_pic_placeholder"
                        android:visibility="visible" />
                </RelativeLayout>

                <com.appster.dentamatch.widget.CustomTextView
                    style="@style/text_view_normal"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/where_you_work"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_xlarge"
                    app:customFont="@string/font_bold" />

                <com.appster.dentamatch.widget.CustomTextView
                    style="@style/text_view_normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/lable_relevant_exp"
                    android:textColor="@color/edt_hint_color"
                    android:textSize="@dimen/text_size_normal"
                    app:customFont="@string/font_regular" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_job_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="@dimen/margin_43"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/padding_input_layout"
                    app:hintTextAppearance="@style/edit_input_layout">

                    <EditText
                        android:id="@+id/et_job_title"
                        style="@style/edit_text_view_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:background="@drawable/bg_slection_edit_text"
                        android:drawablePadding="@dimen/padding_drawable"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/lable_job_title"
                        android:longClickable="false"
                        android:paddingTop="@dimen/padding_drawable" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_work_exp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="@dimen/margin_19"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/padding_input_layout"
                    app:hintTextAppearance="@style/edit_input_layout">

                    <EditText
                        android:id="@+id/tv_experince_work_exp"
                        style="@style/edit_text_view_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:background="@drawable/bg_slection_edit_text"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/year_of_experice"
                        android:longClickable="false"
                        android:paddingTop="@dimen/padding_drawable" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_office_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="@dimen/margin_19"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/padding_input_layout"
                    app:hintTextAppearance="@style/edit_input_layout">

                    <EditText
                        android:id="@+id/et_office_name"
                        style="@style/edit_text_view_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:background="@drawable/edit_text_selector"
                        android:digits="@string/digits_alpha_numeric_only"
                        android:focusable="true"
                        android:hint="@string/office_name"
                        android:paddingTop="@dimen/padding_drawable" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

        </ScrollView>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_next_work_exp"
            style="@style/button_style"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/colorPrimary"
            android:text="@string/lable_next"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_normal"
            app:customBackground="@string/font_bold" />

        <LinearLayout
            android:id="@+id/layout_dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </RelativeLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_about_me"
            layout="@layout/toolbar_general" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_next"
            android:layout_below="@+id/toolbar_about_me">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_include_profile_header"
                    layout="@layout/layout_profile_header" />

                <EditText
                    android:id="@+id/et_desc_about_me"
                    android:layout_height="@dimen/edit_height_about_me"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_normal"
                    android:maxLength="500"
                    android:scrollbars="vertical"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:hint="@string/write_dsc" />
            </LinearLayout>
        </ScrollView>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_next"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/button_bg_color"
            android:gravity="center"
            android:text="@string/lable_complete_profile"
            android:textColor="@color/white_color" />
    </RelativeLayout>

</layout>
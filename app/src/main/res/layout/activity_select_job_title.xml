<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_job_title"
            layout="@layout/toolbar_general" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_current_location"
            style="@style/text_view_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:background="@color/white3_color"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_15"
            android:paddingTop="@dimen/margin_15"
            android:text="@string/job_tile_search"
            android:textAllCaps="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_13"
            app:customFont="@string/font_medium" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_ajob_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </LinearLayout>
</layout>

                    android:background="@color/light_gray" />

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_job_detail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>

        </ScrollView>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_apply_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="@string/button_apply_for_job"
            android:textColor="@color/white_color"
            android:visibility="gone" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_not_found"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:text="@string/txt_job_expired"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            app:customFont="@string/font_medium" />
    </RelativeLayout>
</layout>
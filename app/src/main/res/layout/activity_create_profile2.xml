            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_licence"
                style="@style/text_view_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_height"
                android:background="@color/cell_color"
                android:gravity="start|bottom"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingStart="@dimen/margin_normal"
                android:text="@string/label_licence"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_size_13"
                app:customFont="@string/font_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/cell_boundary_color" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_profile_input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_marginTop="@dimen/margin_43"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/create_profile_et_licence"
                    style="@style/edit_text_view_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:background="@drawable/edit_text_selector"
                    android:digits="@string/digits_licence"
                    android:hint="@string/label_licence_number"
                    android:maxLength="15"
                    android:textColor="@color/text_default_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_profile_input_layout_licence_expiry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_marginTop="@dimen/margin_43"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/create_profile_et_licence_expiry"
                    style="@style/edit_text_view_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:background="@drawable/edit_text_selector"
                    android:digits="@string/digits_licence"
                    android:hint="@string/hint_license_expiry"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLength="15"
                    android:textColor="@color/text_default_color" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_profile_input_layout_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_marginBottom="@dimen/margin_19"
                android:layout_marginTop="@dimen/margin_19"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/create_profile_et_state"
                    style="@style/edit_text_view_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:background="@drawable/edit_text_selector"
                    android:digits="@string/digits_alpha_numeric_only"
                    android:hint="@string/label_state" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>

    <com.appster.dentamatch.widget.CustomButton
        android:id="@+id/create_profile2_btn_next"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:background="@color/button_bg_color"
        android:gravity="center"
        android:text="@string/label_next"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_normal"
        app:customBackground="@string/font_bold" />
</RelativeLayout>
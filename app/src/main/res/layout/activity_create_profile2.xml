<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_create_profile2"
        layout="@layout/toolbar_general" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_profile2_btn_next"
        android:layout_below="@+id/toolbar_create_profile2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_25">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/create_profile_iv_profile_icon"
                    android:layout_width="@dimen/profile_image_width"
                    android:layout_height="@dimen/profile_image_height"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile_pic_placeholder" />

                <ProgressBar
                    android:id="@+id/create_profile_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/profile_progress_dimen"
                    android:layout_height="@dimen/profile_progress_dimen"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="25"
                    android:progressDrawable="@drawable/circular_progress" />
                <!--android:background="@drawable/circular_shape"-->
            </RelativeLayout>

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_name"
                style="@style/text_view_normal"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"
                android:textColor="@color/black_color"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_xlarge"
                app:customFont="@string/font_bold" />

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_job_title"
                style="@style/text_view_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_medium"
                android:textColor="@color/edt_hint_color"
                android:textSize="@dimen/text_size_xlarge"
                android:gravity="center"
                app:customFont="@string/font_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/cell_boundary_color"

                />


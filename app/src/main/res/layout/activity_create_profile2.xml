<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_create_profile2"
        layout="@layout/toolbar_general" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_profile2_btn_next"
        android:layout_below="@+id/toolbar_create_profile2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/margin_25">
                <!--android:background="@drawable/circular_shape"-->

                <ProgressBar
                    android:id="@+id/create_profile_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/profile_progress_dimen"
                    android:layout_height="@dimen/profile_progress_dimen"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circular_shape"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="25"
                    android:progressDrawable="@drawable/circuler_progress" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/create_profile_iv_profile_icon"
                    android:layout_width="@dimen/profile_image_width"
                    android:layout_height="@dimen/profile_image_height"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile_pic_placeholder" />
            </RelativeLayout>

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_name"
                style="@style/text_view_normal"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_xlarge"
                app:customFont="@string/font_bold" />

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_job_title"
                style="@style/text_view_normal"
                android:layout_marginTop="@dimen/margin_medium"
                android:textColor="@color/edt_hint_color"
                android:textSize="@dimen/text_size_xlarge"
                app:customFont="@string/font_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/cell_boundry_color"

                />

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_state_board"
                style="@style/text_view_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_height"
                android:background="@color/cell_color"
                android:gravity="left|bottom"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingLeft="@dimen/margin_normal"
                android:text="@string/dental_state_board"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_size_medium"
                app:customFont="@string/font_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/cell_boundry_color"

                />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/create_profile_iv_upoload_icon"
                android:layout_width="@dimen/camera_image_size"
                android:layout_height="@dimen/camera_image_size"
                android:layout_margin="@dimen/margin_25"
                android:src="@drawable/ic_upload" />

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_upload_photo"
                style="@style/text_view_normal"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/label_upload_photo"
                android:textColor="@color/edt_hint_color"
                android:textSize="@dimen/text_size_xlarge"
                app:customFont="@string/font_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/cell_boundry_color"

                />

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile_tv_licence"
                style="@style/text_view_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_height"
                android:background="@color/cell_color"
                android:gravity="left|bottom"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingLeft="@dimen/margin_normal"
                android:text="@string/lable_licence"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_size_medium"
                app:customFont="@string/font_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/cell_boundry_color"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_profile_input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"

                android:layout_marginTop="@dimen/margin_43"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/create_profile_et_licence"
                    style="@style/edit_text_view_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:background="@drawable/edit_text_selector"
                    android:hint="@string/lable_licence_number"
                    android:maxLength="15"
                    android:digits="@string/digits_licence"
                    android:textColor="@color/text_default_color"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_profile_input_layout_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_marginBottom="@dimen/margin_19"
                android:layout_marginTop="@dimen/margin_19"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/create_profile_et_state"
                    style="@style/edit_text_view_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:background="@drawable/edit_text_selector"
                    android:hint="@string/lable_state" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>

    <com.appster.dentamatch.widget.CustomButton
        android:id="@+id/create_profile2_btn_next"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:background="@color/button_bg_color"
        android:gravity="center"
        android:text="@string/lable_next"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_normal"
        app:customBackground="@string/font_bold" />
</RelativeLayout>
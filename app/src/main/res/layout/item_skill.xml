<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_skills_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal">

            <RelativeLayout
                android:id="@+id/layout_skills_inner"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/margin_large"
                android:paddingBottom="@dimen/margin_large"
                android:layout_height="wrap_content">

                <com.appster.dentamatch.widget.CustomTextView
                    android:id="@+id/tv_skill_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Skill Item"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_forgot_pwd"
                    android:textSize="@dimen/text_size_large"
                    app:customFont="@string/font_bold" />

                <ImageView
                    android:id="@+id/iv_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_disclosure_indicator" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_skill_bricks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_skills_inner"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="Motor management skills" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@color/light_gray"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="Engineering foundation skills" />
            </LinearLayout>

            <com.appster.dentamatch.widget.CustomEditText
                android:id="@+id/et_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_skill_bricks"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/white_1" />
    </LinearLayout>
</layout>
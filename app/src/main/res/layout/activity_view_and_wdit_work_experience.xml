<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_work_exp_view"
            layout="@layout/toolbar_general" />
        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_title_screen"
            style="@style/text_view_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:background="@color/cell_color"
            android:paddingStart="@dimen/margin_normal"
            android:text="@string/header_work_exp"
            android:visibility="visible"
            app:customFont="@string/font_medium"
            android:layout_below="@+id/toolbar_work_exp_view"

            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_update"
            android:layout_below="@+id/tv_title_screen"
            android:layout_marginBottom="@dimen/margin_medium">

            <LinearLayout
                android:id="@+id/layout_parent_scroll_work_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <include
                    android:id="@+id/layout_work_exp_view_edit"
                    layout="@layout/layout_work_exp" />

                <include
                    android:id="@+id/include_layout_reference1"
                    layout="@layout/layout_reference" />

                <LinearLayout
                    android:id="@+id/layout_reference2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/include_layout_reference2"
                        layout="@layout/layout_reference" />
                </LinearLayout>

                <com.appster.dentamatch.widget.CustomTextView
                    android:id="@+id/tv_add_more_reference"
                    style="@style/text_view_normal"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:drawableStart="@drawable/ic_add_reference"
                    android:paddingStart="@dimen/margin_medium"
                    android:text="@string/add_more_reference"
                    android:textColor="@color/color_forgot_pwd"
                    android:textSize="@dimen/text_size_14"
                    app:customFont="@string/font_regular" />

                <com.appster.dentamatch.widget.CustomTextView
                    android:id="@+id/tv_experience_delete"
                    style="@style/text_view_normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginBottom="@dimen/margin_17"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:text="@string/experience_delete"
                    android:textAllCaps="true"
                    android:textColor="@color/color_forgot_pwd"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="visible"
                    app:customFont="@string/font_bold" />


                <RelativeLayout
                    android:id="@+id/rel_save"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cell_height"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_cell"
                    android:visibility="gone">

                    <com.appster.dentamatch.widget.CustomTextView
                        android:id="@+id/tv_save"
                        style="@style/text_view_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/line_height"
                        android:layout_marginTop="@dimen/line_height"
                        android:background="@color/cell_color"
                        android:drawablePadding="@dimen/padding_drawable"
                        android:drawableStart="@drawable/ic_profile_plus"
                        android:gravity="center"
                        android:text="@string/save_label"
                        android:textColor="@color/cell_text_color"
                        android:textSize="@dimen/text_size_normal"
                        app:customFont="@string/font_regular" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_update"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/button_bg_color"
            android:gravity="center"
            android:text="@string/save_label"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_normal"
            app:customFont="@string/font_regular" />
    </RelativeLayout>
</layout>
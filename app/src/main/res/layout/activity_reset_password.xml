<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_reset_password"
            layout="@layout/toolbar_general" />

        <RelativeLayout
            android:id="@+id/rl_old_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_reset_password"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_old_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_19"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:passwordToggleEnabled="false"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/et_old_password"
                    style="@style/edit_text_view_normal"
                    android:background="@drawable/edit_text_selector"
                    android:digits="@string/digits_alpha_numeric_only"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_password"
                    android:hint="@string/old_password_label"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/margin_50"
                    android:maxLength="@integer/password_max_length"

                    />
            </android.support.design.widget.TextInputLayout>

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/tv_show_old_password"
                style="@style/text_view_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:digits="@string/digits_alpha_numeric_only"
                android:paddingEnd="@dimen/margin_36"
                android:paddingTop="@dimen/margin_19"
                android:text="@string/show_password"
                android:textColor="@color/color_forgot_pwd"
                android:textSize="@dimen/text_size_12"
                app:customFont="@string/font_regular" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_old_password"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_19"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:passwordToggleEnabled="false"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/et_new_password"
                    style="@style/edit_text_view_normal"
                    android:background="@drawable/edit_text_selector"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_password"
                    android:hint="@string/new_password_label"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/margin_50"
                    android:maxLength="@integer/password_max_length"

                    />
            </android.support.design.widget.TextInputLayout>

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/tv_show_new_password"
                style="@style/text_view_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/margin_36"
                android:paddingTop="@dimen/margin_19"
                android:text="@string/show_password"
                android:textColor="@color/color_forgot_pwd"
                android:textSize="@dimen/text_size_12"
                app:customFont="@string/font_regular" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_new_password"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_19"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:passwordToggleEnabled="false"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/et_confirm_password"
                    style="@style/edit_text_view_normal"
                    android:background="@drawable/edit_text_selector"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_password"
                    android:hint="@string/confirm_password_label"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/margin_50"
                    android:maxLength="@integer/password_max_length"
                    />
            </android.support.design.widget.TextInputLayout>

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/tv_show_confirm_password"
                style="@style/text_view_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/margin_36"
                android:paddingTop="@dimen/margin_19"
                android:text="@string/show_password"
                android:textColor="@color/color_forgot_pwd"
                android:textSize="@dimen/text_size_12"
                app:customFont="@string/font_regular" />
        </RelativeLayout>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_save"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/button_bg_color"
            android:gravity="center"
            android:text="@string/save_label"
            android:textColor="@color/white_color"
            app:customBackground="@string/font_bold" />
    </RelativeLayout>
</layout>
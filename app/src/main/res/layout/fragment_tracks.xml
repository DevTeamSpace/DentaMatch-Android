<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/lay_tab_fragment_tracks"
        android:background="@color/toolbar_color"
        app:tabSelectedTextColor="@color/white_color"
        app:tabTextColor="@color/tab_normal_color"
        app:tabIndicatorColor="@color/color_forgot_pwd"
        app:tabIndicatorHeight="@dimen/margin_small"
        app:tabGravity="center"
        android:layout_height="?android:attr/actionBarSize"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/lay_container_fragment_tracks"
        android:layout_height="match_parent"/>

</LinearLayout>
</layout>
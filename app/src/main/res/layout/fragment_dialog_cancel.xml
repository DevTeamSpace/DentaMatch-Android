<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    android:layout_height="wrap_content">

    <com.appster.dentamatch.widget.CustomTextView
        style="@style/text_view_large"
        android:id="@+id/tv_dialog_title"
        android:layout_marginStart="@dimen/margin_normal"
        android:text="Reason for the cancellation"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:textColor="@color/black_color"
        android:layout_marginTop="@dimen/margin_21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="@string/font_medium"
        />

    <com.appster.dentamatch.widget.CustomTextView
        style="@style/text_view_normal"
        android:id="@+id/tv_fragment_dialog_note"
        android:layout_marginStart="@dimen/margin_normal"
        android:text="Note"
        android:layout_below="@+id/tv_dialog_title"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:textColor="@color/note_color"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="@string/font_medium"
        />

    <EditText
        android:layout_height="150dp"
        android:maxLines="4"
        android:textSize="@dimen/text_size_normal"
        android:layout_below="@+id/tv_fragment_dialog_note"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:layout_marginTop="@dimen/margin_15"
        android:id="@+id/et_fragment_dialog_cancel"
        android:textColor="@color/black_color"
        android:textColorHint="@color/edt_hint_color"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:hint="Please write a short description."
        android:padding="@dimen/default_padding"
        android:background="@drawable/edittext_curved_background"
        />

    <com.appster.dentamatch.widget.CustomTextView
        style="@style/text_view_normal"
        android:id="@+id/tv_fragment_dialog_submit"
        android:layout_marginStart="@dimen/margin_normal"
        android:text="SUBMIT"
        android:layout_below="@+id/et_fragment_dialog_cancel"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="@string/font_medium"
        />

</RelativeLayout>
</layout>
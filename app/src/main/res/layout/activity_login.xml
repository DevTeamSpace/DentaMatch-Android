<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/login_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/login_btn_register">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/login_layout_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_header_height"
                    android:background="@drawable/bg_register">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:layout_alignParentBottom="true"
                        android:background="@color/white_color" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_logo" />

                    <LinearLayout
                        android:id="@+id/login_view_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_toStartOf="@+id/dummy_view_id"
                        android:orientation="vertical">

                        <com.appster.dentamatch.widget.CustomTextView
                            android:id="@+id/register_tv_register"
                            style="@style/text_view_normal"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_small_3"
                            android:gravity="center"
                            android:text="@string/register_label"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_13"
                            app:customFont="@string/font_bold" />

                        <ImageView
                            android:id="@+id/register_iv_peg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_click_indicator"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <View
                        android:id="@+id/dummy_view_id"
                        android:layout_width="@dimen/margin_10"
                        android:layout_height="@dimen/margin_10"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:id="@+id/login_view_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="bottom"
                        android:layout_toEndOf="@+id/dummy_view_id"
                        android:orientation="vertical">

                        <com.appster.dentamatch.widget.CustomTextView
                            android:id="@+id/tv_login"
                            style="@style/text_view_normal"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_small_3"
                            android:gravity="center"
                            android:text="@string/login_label"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_13"
                            app:customFont="@string/font_bold" />

                        <ImageView
                            android:id="@+id/iv_peg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_click_indicator" />
                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/login_layout_login_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_46"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.appster.dentamatch.widget.CustomTextView
                        style="@style/text_view_normal"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:text="@string/login_info_label"
                        android:textColor="@color/text_default_color"
                        android:textSize="@dimen/text_size_13" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/login_input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="@dimen/margin_20"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/padding_input_layout"
                        app:hintTextAppearance="@style/edit_input_layout">

                        <EditText
                            android:id="@+id/login_et_email"
                            style="@style/edit_text_view_normal"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:background="@drawable/edit_text_selector"
                            android:digits="@string/digits_alpha_numeric_email"
                            android:drawablePadding="@dimen/margin_10"
                            android:drawableStart="@drawable/ic_name"
                            android:hint="@string/email_label"
                            android:inputType="textEmailAddress"
                            android:maxLength="@integer/email_max_length" />
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/login_input_layout_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_19"
                            android:clipToPadding="false"
                            android:gravity="bottom"
                            app:passwordToggleEnabled="false"
                            android:paddingTop="@dimen/padding_input_layout">

                            <EditText
                                android:id="@+id/login_et_password"
                                style="@style/edit_text_view_normal"
                                android:layout_marginLeft="@dimen/margin_normal"
                                android:layout_marginRight="@dimen/margin_normal"
                                android:background="@drawable/edit_text_selector"
                                android:drawablePadding="@dimen/margin_10"
                                android:drawableStart="@drawable/ic_password"
                                android:hint="@string/password_label"
                                android:inputType="textPassword"
                                android:paddingEnd="@dimen/margin_50" />

                        </android.support.design.widget.TextInputLayout>

                        <com.appster.dentamatch.widget.CustomTextView
                            android:id="@+id/login_tv_show_password"
                            style="@style/text_view_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="@dimen/margin_36"
                            android:paddingTop="@dimen/margin_19"
                            android:text="@string/show_password"
                            android:visibility="visible"
                            android:textColor="@color/color_forgot_pwd"
                            android:textSize="@dimen/text_size_12"
                            app:customFont="@string/font_regular" />
                    </RelativeLayout>

                    <com.appster.dentamatch.widget.CustomTextView
                        android:id="@+id/login_tv_forgot_password"
                        style="@style/text_view_normal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_19"
                        android:gravity="center"
                        android:text="@string/forgot_password_label"
                        android:textColor="@color/color_forgot_pwd" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_layout_register_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_19"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_input_layout_fname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="@dimen/margin_55"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/padding_input_layout"
                        app:hintTextAppearance="@style/edit_input_layout">

                        <EditText
                            android:id="@+id/register_et_fname"
                            style="@style/edit_text_view_normal"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:background="@drawable/edit_text_selector"
                            android:digits="@string/digits_alpha_numeric_only"
                            android:drawablePadding="@dimen/padding_drawable"
                            android:drawableStart="@drawable/ic_name"
                            android:hint="@string/fname_label"
                            android:inputType="textCapWords"
                            android:paddingTop="@dimen/padding_drawable"
                            android:textColor="@color/text_default_color" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_input_layout_lname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="@dimen/margin_19"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/padding_input_layout"
                        app:hintTextAppearance="@style/edit_input_layout">

                        <EditText
                            android:id="@+id/register_et_lname"
                            style="@style/edit_text_view_normal"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:background="@drawable/edit_text_selector"
                            android:digits="@string/digits_alpha_numeric_only"
                            android:drawablePadding="@dimen/padding_drawable"
                            android:drawableStart="@drawable/ic_name"
                            android:hint="@string/lname_label"
                            android:inputType="textCapWords"
                            android:paddingTop="@dimen/padding_drawable"
                            android:textColor="@color/text_default_color" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginTop="@dimen/margin_19"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:paddingTop="@dimen/padding_input_layout"
                        app:hintTextAppearance="@style/edit_input_layout">

                        <EditText
                            android:id="@+id/register_et_email"
                            style="@style/edit_text_view_normal"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:background="@drawable/edit_text_selector"
                            android:digits="@string/digits_alpha_numeric_email"
                            android:drawablePadding="@dimen/padding_drawable"
                            android:drawableStart="@drawable/ic_email"
                            android:hint="@string/email_label"
                            android:inputType="textEmailAddress"
                            android:paddingTop="@dimen/padding_drawable" />
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/register_input_layout_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_19"
                            android:clipToPadding="false"
                            android:gravity="bottom"
                            android:paddingTop="@dimen/padding_input_layout"
                            app:passwordToggleEnabled="false"
                            app:hintTextAppearance="@style/edit_input_layout">

                            <EditText
                                android:id="@+id/register_et_password"
                                style="@style/edit_text_view_normal"
                                android:layout_marginLeft="@dimen/margin_normal"
                                android:layout_marginRight="@dimen/margin_normal"
                                android:layout_marginTop="@dimen/margin_19"
                                android:background="@drawable/edit_text_selector"
                                android:drawablePadding="@dimen/padding_drawable"
                                android:drawableStart="@drawable/ic_password"
                                android:hint="@string/password_label"
                                android:inputType="textPassword"
                                android:paddingEnd="@dimen/margin_50" />
                        </android.support.design.widget.TextInputLayout>

                        <com.appster.dentamatch.widget.CustomTextView
                            android:id="@+id/register_tv_show_password"
                            style="@style/text_view_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="@dimen/margin_36"
                            android:paddingTop="@dimen/margin_19"
                            android:text="@string/show_password"
                            android:textColor="@color/color_forgot_pwd"
                            android:textSize="@dimen/text_size_12"
                            app:customFont="@string/font_regular" />
                    </RelativeLayout>

                    <com.appster.dentamatch.widget.CustomTextView
                        android:id="@+id/tv_preferred_job_location"
                        style="@style/text_view_normal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_19"
                        android:background="@drawable/bg_edit_text"
                        android:drawablePadding="@dimen/padding_drawable"
                        android:drawableStart="@drawable/ic_location"
                        android:ellipsize="end"
                        android:fontFeatureSettings="@string/font_regular"
                        android:hint="@string/preferred_location_label"
                        android:maxLines="1"
                        tools:targetApi="lollipop" />

                    <com.appster.dentamatch.widget.CustomTextView
                        style="@style/text_view_normal"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawablePadding="@dimen/margin_small"
                        android:drawableStart="@drawable/ic_help"
                        android:gravity="start|center_vertical"

                        android:paddingStart="@dimen/margin_medium"
                        android:text="@string/register_help_info"
                        android:textColor="@color/register_help_color"
                        android:textSize="@dimen/text_size_11" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_19">

                        <ImageView
                            android:id="@+id/iv_accept_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_check_empty" />

                        <com.appster.dentamatch.widget.CustomTextView
                            android:id="@+id/tv_term_n_policy"
                            style="@style/text_view_normal"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_toEndOf="@+id/iv_accept_policy"
                            android:text="@string/label_accept_term_n_condition"
                            android:textColor="@color/text_default_color" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/login_btn_register"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/button_bg_color"
            android:gravity="center"
            android:text="@string/login_label"
            android:textColor="@color/white_color"
            app:customBackground="@string/font_bold" />
    </RelativeLayout>
</layout>
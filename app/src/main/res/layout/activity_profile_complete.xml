<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical"

        >

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_gradient_grey"

            />

        <ImageView
            android:id="@+id/image_complete"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_complete_profile"

            />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_complete_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_complete"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_35"
            android:gravity="center"
            android:text="@string/text_complete_prof"

            android:textColor="@color/dark_indigo"
            android:textSize="@dimen/text_size_23"
            app:customFont="@string/font_bold"


            />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_complete_profile_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_complete_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_21"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/text_complete_prof_info"
            android:textColor="@color/edt_hint_color"
            android:textSize="@dimen/text_size_15"
            app:customFont="@string/font_regular" />

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_complete_profile"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/tv_complete_profile_info"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="@dimen/margin_28"
            android:background="@color/button_bg_color"
            android:gravity="center"
            android:text="@string/text_complete_prof"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_15"
            app:customFont="@string/font_bold" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/ic_close"


            />


    </RelativeLayout>
</layout>
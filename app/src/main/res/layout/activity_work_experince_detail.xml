<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color">

        <include
            android:id="@+id/toolbar_work_exp_detail"
            layout="@layout/toolbar_general" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_work_exp_detail"
            android:layout_marginBottom="@dimen/margin_29">

            <LinearLayout
                android:id="@+id/layout_parent_scroll_work_exp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/include_layout_work_exp"
                    layout="@layout/layout_work_exp" />

                <include
                    android:id="@+id/include_refrence"
                    layout="@layout/layout_reference" />

                <LinearLayout
                    android:id="@+id/layout_refrence_infalter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <com.appster.dentamatch.widget.CustomTextView
                    android:id="@+id/tv_add_more_reference"
                    style="@style/text_view_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_12"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:drawableStart="@drawable/ic_add_refrence"
                    android:paddingLeft="@dimen/margin_medium"
                    android:text="@string/add_more_refrence"
                    android:textColor="@color/color_forgot_pwd"
                    android:textSize="@dimen/text_size_12"
                    app:customFont="@string/font_regular" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cell_height"
                    android:layout_marginBottom="@dimen/margin_29"
                    android:layout_marginTop="@dimen/margin_29"
                    android:background="@color/cell_color">

                    <com.appster.dentamatch.widget.CustomTextView
                        android:id="@+id/tv_add_more_experience"
                        style="@style/text_view_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/cell_color"
                        android:drawablePadding="@dimen/padding_drawable"
                        android:drawableStart="@drawable/ic_profile_plus"
                        android:gravity="center"
                        android:text="@string/add_more_exp"
                        android:textColor="@color/cell_text_color"
                        android:textSize="@dimen/text_size_normal"
                        app:customFont="@string/font_regular" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_next_detail_work_exp"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/button_bg_color"
            android:gravity="center"
            android:text="@string/lable_next"
            android:textColor="@color/white_color_pacity"
            android:textSize="@dimen/text_size_large"
            app:customFont="@string/font_regular" />
    </RelativeLayout>
</layout>
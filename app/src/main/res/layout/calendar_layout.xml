<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/activity_custom_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/previous_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:paddingStart="@dimen/margin_15"
                android:paddingEnd="@dimen/margin_15"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_left" />

            <ImageView
                android:id="@+id/iv_full_time"
                android:layout_width="@dimen/margin_5"
                android:layout_height="@dimen/margin_5"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_6"
                android:layout_toStartOf="@+id/display_current_date"
                android:background="@drawable/shape_full_time_dot"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/display_current_date"
                style="@style/text_view_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/previous_month"
                android:layout_toStartOf="@id/next_month"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/grayish_brown_color"
                app:customFont="@string/font_regular" />

            <ImageView
                android:id="@+id/next_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start|center_horizontal"
                android:contentDescription="@string/app_name"
                android:paddingStart="@dimen/margin_15"
                android:paddingEnd="@dimen/margin_15"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/calendar_view_pager"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>
</layout>
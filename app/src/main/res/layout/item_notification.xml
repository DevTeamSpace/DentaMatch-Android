<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_18">

            <ImageView
                android:id="@+id/iv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_read_notification" />

            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/tv_desc"
                style="@style/text_view_normal"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_toEndOf="@+id/iv_read"
                android:layout_toStartOf="@+id/iv_right_arrow"
                android:textColor="@color/chat_message"
                android:textSize="@dimen/text_size_14"
                app:customFont="@string/font_regular" />

            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_address"
            style="@style/text_view_normal"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:lineSpacingExtra="@dimen/margin_small_3"
            android:textColor="@color/chat_message"
            android:textSize="@dimen/text_size_14"
            app:customFont="@string/font_regular" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_type"
            style="@style/text_view_normal"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_medium"
            android:lineSpacingExtra="@dimen/margin_small_3"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_5"
            android:text="@string/txt_temporary"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_small"

            app:customFont="@string/font_regular" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_time"
            style="@style/text_view_normal"
            android:layout_marginBottom="@dimen/margin_19"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/chat_message"
            android:textSize="@dimen/text_size_small"
            app:customFont="@string/font_regular" />


        <LinearLayout
            android:id="@+id/layout_invite_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_19"
            android:layout_marginStart="@dimen/margin_36"
            android:layout_marginEnd="@dimen/margin_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/tv_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_accept"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/color_forgot_pwd"/>

            <Button
                android:id="@+id/tv_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_reject"
                android:textColor="@color/red_color"
                style="?android:attr/borderlessButtonStyle"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/notification_message_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:text="@string/txt_message"
                android:textColor="@color/color_forgot_pwd"
                android:background="@drawable/message_button_background"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_divider" />
    </LinearLayout>
</layout>
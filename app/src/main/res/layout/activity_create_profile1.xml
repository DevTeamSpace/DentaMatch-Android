<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/create_profile1_layout_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_header_height"
                android:background="@drawable/bg_register">


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/create_profile1_iv_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/profile_pic_placeholder" />


                <com.appster.dentamatch.widget.CustomTextView
                    android:id="@+id/create_profile_tv_name"
                    style="@style/text_view_normal"
                    android:layout_below="@+id/create_profile1_iv_profile_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/accept"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_header"
                    app:customFont="@string/font_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_click_indicator" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_color"

                    />
            </RelativeLayout>


            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile1_tv_state_board"
                style="@style/text_view_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_height"
                android:layout_marginTop="@dimen/margin_36"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_25"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:text="@string/profile1_text"
                android:textColor="@color/edt_hint_color"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_medium" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_height"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@drawable/bg_edit_text_highlight">
            <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner-->
                <!--android:id="@+id/spinner_job_title_create_profile1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/edit_height"-->
                <!--android:hint="@string/lable_job_title"-->
                <!--android:background="@null"-->


                <!--android:textColorHint="@color/edt_hint_color"-->
                <!--android:textSize="@dimen/text_size_normal"-->
                <!--app:met_floatingLabel="normal" />-->
                <Spinner
                    android:id="@+id/spinner_job_title_create_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/lable_job_title"></Spinner>

            </LinearLayout>
            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/create_profile1_input_layout_state"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/edit_height"-->
                <!--android:layout_marginBottom="@dimen/margin_19"-->
                <!--android:clipToPadding="false"-->
                <!--android:gravity="bottom"-->
                <!--android:paddingTop="@dimen/padding_input_layout"-->
                <!--app:hintTextAppearance="@style/edit_input_layout">-->

                <!--<EditText-->
                    <!--android:id="@+id/create_profile_et_job"-->
                    <!--style="@style/edit_text_view_normal"-->
                    <!--android:layout_marginLeft="@dimen/margin_normal"-->
                    <!--android:layout_marginRight="@dimen/margin_normal"-->
                    <!--android:background="@drawable/edit_text_selector"-->
                    <!--android:hint="@string/lable_job_title" />-->
            <!--</android.support.design.widget.TextInputLayout>-->
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"

            android:layout_alignParentBottom="true"

            android:background="@color/colorPrimary">

            <com.appster.dentamatch.widget.CustomButton
                android:id="@+id/create_profile1_btn_not_now"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_normal"

                android:background="@null"
                android:gravity="center"
                android:text="@string/lable_not_now"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_large" />

            <com.appster.dentamatch.widget.CustomButton
                android:id="@+id/create_profile1_btn_next"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@null"
                android:gravity="center"
                android:text="@string/lable_next"
                android:textColor="@color/white_color_pacity"
                android:textSize="@dimen/text_size_large" />
        </RelativeLayout>

    </RelativeLayout>
</layout>

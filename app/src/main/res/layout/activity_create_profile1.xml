<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/create_profile1_layout_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_header_height"
                android:background="@drawable/bg_register">

                <FrameLayout
                    android:id="@+id/fl_profile_pic_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/create_profile1_iv_profile_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_pic_placeholder" />

                    <ImageView
                        android:id="@+id/iv_profile_plus_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:paddingBottom="@dimen/margin_small_3"
                        android:src="@drawable/ic_profile_plus" />

                </FrameLayout>


                <com.appster.dentamatch.widget.CustomTextView
                    android:id="@+id/create_profile_tv_name"
                    style="@style/text_view_normal"
                    android:layout_below="@+id/fl_profile_pic_id"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="@string/txt_accept"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_header"
                    app:customFont="@string/font_regular" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_click_indicator" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_color"

                    />
            </RelativeLayout>


            <com.appster.dentamatch.widget.CustomTextView
                android:id="@+id/create_profile1_tv_state_board"
                style="@style/text_view_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_height"
                android:layout_marginBottom="@dimen/margin_25"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_36"
                android:gravity="center"
                android:text="@string/profile1_text"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_16"
                app:customFont="@string/font_light" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_job_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:clipToPadding="false"
                android:gravity="bottom"
                android:paddingTop="@dimen/padding_input_layout"
                app:hintTextAppearance="@style/edit_input_layout">

                <EditText
                    android:id="@+id/et_job_title"
                    style="@style/edit_text_view_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:background="@drawable/bg_slection_edit_text"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:drawableEnd="@drawable/ic_down_arrow"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/label_job_title"
                    android:longClickable="false"
                    android:paddingTop="@dimen/padding_drawable" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary">

            <com.appster.dentamatch.widget.CustomButton
                android:id="@+id/create_profile1_btn_not_now"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/margin_normal"
                android:background="@null"
                android:gravity="center"
                android:text="@string/lable_not_now"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_normal"
                app:customBackground="@string/font_bold" />

            <com.appster.dentamatch.widget.CustomButton
                android:id="@+id/create_profile1_btn_next"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_normal"
                android:background="@null"
                android:gravity="center"
                android:text="@string/label_next"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_normal"
                app:customBackground="@string/font_bold" />
        </RelativeLayout>

    </RelativeLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/toolbar_general"
            android:id="@+id/toolbar_activity_chat"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/messages"
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbarStyle="outsideOverlay"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/off_white"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dp"
                android:textSize="@dimen/text_size_12"
                android:background="@drawable/edittext_curved_background_chat"
                android:paddingStart="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_10"
                android:paddingTop="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_marginBottom="@dimen/margin_7"
                android:layout_marginStart="@dimen/margin_14"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/txt_text_message"
                android:imeActionId="@+id/send"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:maxLines="1"
                />

            <ImageView
                android:id="@+id/send_button"
                android:layout_marginStart="@dimen/margin_17"
                android:layout_marginEnd="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_14"
                android:layout_marginBottom="@dimen/margin_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chat_send" />

        </LinearLayout>

    </LinearLayout>

</layout>
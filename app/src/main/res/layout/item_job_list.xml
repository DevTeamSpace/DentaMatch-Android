<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/lay_item_job_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_name"
            style="@style/text_view_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_33"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_toStartOf="@+id/cb_job_selection"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/margin_small"
            android:textColor="@color/cerulean_color"
            app:customFont="@string/font_medium" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_type"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_job_name"
            android:layout_marginStart="@dimen/margin_33"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/job_type_background_part_time"
            android:paddingBottom="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_small"
            android:textColor="@color/white_color"
            app:customFont="@string/font_medium" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_job_type"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_small_3"
            android:layout_toEndOf="@+id/tv_job_type"
            android:layout_toStartOf="@+id/tv_job_doc_distance"
            android:ellipsize="end"
            android:paddingTop="@dimen/margin_small"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_12"
            app:customFont="@string/font_regular" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_doc_name"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_job_type"
            android:layout_marginStart="@dimen/margin_33"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/black_color"
            app:customFont="@string/font_bold" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_doc_address"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_job_doc_name"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_33"
            android:layout_toStartOf="@+id/tv_job_doc_distance"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:textColor="@color/black_color"
            app:customFont="@string/font_regular" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_hwa_name"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_job_doc_address"
            android:layout_marginStart="@dimen/margin_33"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/hwa_label"
            android:textColor="@color/black_color"
            android:visibility="gone"
            app:customFont="@string/font_bold" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_hwa_val"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hwa_name"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_33"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:text="@string/hwa_label"
            android:textColor="@color/black_color"
            android:visibility="gone"
            app:customFont="@string/font_regular" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_doc_time"
            style="@style/text_view_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hwa_val"
            android:layout_marginStart="@dimen/margin_33"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:textAllCaps="true"
            app:customFont="@string/font_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_below="@+id/tv_job_doc_time"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/line_divider" />


        <CheckBox
            android:id="@+id/cb_job_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_job_name"
            android:layout_marginEnd="@dimen/margin_35"
            android:button="@drawable/checkbox_star_selector"
            android:padding="@dimen/margin_small"
            android:src="@drawable/img_job_star" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_job_doc_distance"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cb_job_selection"
            android:layout_marginEnd="@dimen/margin_25"
            android:paddingTop="@dimen/margin_9"
            android:textColor="@color/black_color"
            app:customFont="@string/font_bold" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_matches"
            style="@style/text_view_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_job_doc_distance"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="9dp"
            android:paddingBottom="@dimen/margin_small"
            android:text="@string/txt_match"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_11"
            android:visibility="invisible"
            app:customFont="@string/font_medium" />


    </RelativeLayout>
</layout>
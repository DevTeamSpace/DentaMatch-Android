<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_profile"
            layout="@layout/toolbar_general" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_save"
            android:layout_below="@+id/toolbar_profile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/fl_profile_pic_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_33"
                    android:layout_marginTop="@dimen/margin_33">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/create_profile1_iv_profile_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_pic_placeholder" />

                    <ImageView
                        android:id="@+id/iv_profile_plus_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:paddingBottom="@dimen/margin_small_3"
                        android:src="@drawable/ic_profile_plus" />
                </FrameLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_fname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/padding_input_layout"
                    app:hintTextAppearance="@style/edit_input_layout">


                    <EditText
                        android:id="@+id/et_fname"
                        style="@style/edit_text_view_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:background="@drawable/edit_text_selector"
                        android:digits="@string/digits_alpha_numeric_only"
                        android:hint="@string/fname_label"

                        android:inputType="textCapWords"
                        android:paddingTop="@dimen/padding_drawable"
                        android:textColor="@color/text_default_color" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_lname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"

                    android:layout_marginTop="@dimen/margin_20"
                    android:clipToPadding="false"
                    android:digits="@string/digits_alpha_numeric_only"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/padding_input_layout"
                    app:hintTextAppearance="@style/edit_input_layout">

                    <EditText
                        android:id="@+id/et_lname"
                        style="@style/edit_text_view_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:background="@drawable/edit_text_selector"
                        android:hint="@string/lname_label"
                        android:inputType="textCapWords"
                        android:paddingTop="@dimen/padding_drawable"
                        android:textColor="@color/text_default_color" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_job_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="@dimen/margin_20"
                    android:clipToPadding="false"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/padding_input_layout"
                    app:hintTextAppearance="@style/edit_input_layout">

                    <EditText
                        android:id="@+id/et_job_title"
                        style="@style/edit_text_view_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:background="@drawable/edit_text_selector"
                        android:hint="@string/job_type"
                        android:inputType="textCapWords"
                        android:paddingTop="@dimen/padding_drawable"
                        android:textColor="@color/text_default_color" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginTop="@dimen/margin_20"
                    android:clipToPadding="false"
                    android:focusable="false"
                    android:gravity="bottom"
                    android:paddingTop="@dimen/padding_input_layout"
                    app:hintTextAppearance="@style/edit_input_layout">


                    <EditText
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_height"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:background="@drawable/edit_text_selector"
                        android:hint="@string/location"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingTop="@dimen/padding_drawable"
                        android:scrollHorizontally="true"
                        android:textColor="@color/text_default_color"
                        android:textColorHint="@color/edt_hint_color"
                        android:textSize="@dimen/text_size_normal" />
                </android.support.design.widget.TextInputLayout>

                <EditText
                    android:id="@+id/et_desc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height_about_me"
                    android:layout_margin="@dimen/margin_normal"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="top"
                    android:hint="@string/write_description"

                    />
            </LinearLayout>


        </ScrollView>

        <com.appster.dentamatch.widget.CustomButton
            android:id="@+id/btn_save"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/save_label"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_normal"
            app:customBackground="@string/font_bold" />
    </RelativeLayout>
</layout>

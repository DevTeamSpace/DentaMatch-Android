<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.appster.dentamatch.widget.CustomTextView
        android:id="@+id/forgot_password_tv_title"
        style="@style/text_view_normal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:gravity="center"

        android:text="@string/forgot_password_title"
        android:textColor="@color/edt_hint_color"
        android:textSize="@dimen/text_size_normal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/forgot_password_input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/forgot_password_tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_36"
        android:clipToPadding="false"
        android:gravity="bottom"

        android:paddingTop="@dimen/padding_input_layout"
        app:hintTextAppearance="@style/edit_input_layout">

        <EditText
            android:id="@+id/forgot_password_et_email"

            style="@style/edit_text_view_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@drawable/edit_text_selector"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/bubble_shadow"
            android:hint="@string/email_label" />
    </android.support.design.widget.TextInputLayout>

    <com.appster.dentamatch.widget.CustomButton
        android:id="@+id/forgot_password_btn_save"
        style="@style/button_style"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/com_facebook_blue"
        android:gravity="center"
        android:text="@string/send_label"
        android:textColor="@color/white_color_pacity" />

</RelativeLayout>
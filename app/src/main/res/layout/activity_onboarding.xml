<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_onboarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.appster.dentamatch.widget.CustomTextView
            android:id="@+id/tv_skip_onboarding"
            style="@style/text_view_normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_normal"
            android:text="@string/get_started"
            android:textColor="@color/get_started_color"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/margin_normal"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_dot1"
                android:layout_width="@dimen/dot_dimen"
                android:layout_height="@dimen/dot_dimen"
                android:background="@drawable/shape_dot_selected"
                />
            <ImageView
                android:id="@+id/iv_dot2"
                android:layout_width="@dimen/dot_dimen"
                android:layout_height="@dimen/dot_dimen"
                android:background="@drawable/shape_dot_selected"
                android:layout_marginStart="@dimen/dot_dimen"/>
            <ImageView
                android:id="@+id/iv_dot3"
                android:layout_width="@dimen/dot_dimen"
                android:layout_height="@dimen/dot_dimen"
                android:background="@drawable/shape_dot_selected"
                android:layout_marginStart="@dimen/dot_dimen"/>
            <ImageView
                android:id="@+id/iv_dot4"
                android:layout_width="@dimen/dot_dimen"
                android:layout_height="@dimen/dot_dimen"
                android:background="@drawable/shape_dot_selected"
                android:layout_marginStart="@dimen/dot_dimen"/>

        </LinearLayout>
    </RelativeLayout>
</layout>